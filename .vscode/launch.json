    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "hexo server",
            "outputCapture": "std",
            "program": "${workspaceFolder}/node_modules/hexo-cli/bin/hexo",
            "cwd": "${workspaceFolder}",
            "args": [
                "server",
                "--debug"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "mditc",
            "outputCapture": "std",
            "sourceMaps": true,
            "program": "${workspaceFolder}/mditc-fix.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "${workspaceRoot}/node_modules/**/*.js"
            ],
            "cwd": "${workspaceFolder}",
            "args": [
            ]
        }
    ]
}
